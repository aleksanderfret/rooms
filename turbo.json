{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": [".env"],
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": [".next/**", "!.next/cache/**"]
    },
    "check": {},
    "compile": {},
    "dev": {
      "dotEnv": [".env"],
      "cache": false,
      "persistent": true
    },
    "lint": {},
    "lint:fix": {},
    "pre-commit": {},
    "pre-push": {},
    "test:e2e": { "dependsOn": ["^build"] },
    "test:dev:e2e": { "cache": false }
  }
}
